<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui">
	<ui:style>
		.important {
			font-weight: bold;
			padding: 10px;
			width: 100%;
		}
		.divider {
			height:10px;
		}
	</ui:style>
	<g:HTMLPanel>
	     <img style="max-width:180px; max-height:180px; height:auto; width:auto;" src="images/Sphere.png" />
	    <g:VerticalPanel>
			<g:Button styleName="{style.important}" ui:field="buttonMainPage">Home</g:Button>
			<g:HTML styleName="{style.divider}"/>
			<g:Button styleName="{style.important}" ui:field="buttonShowStocks">Show Stocks</g:Button>
			<g:HTML styleName="{style.divider}"/>
			<g:Button styleName="{style.important}" ui:field="buttonShowIndexes">Show Indexes</g:Button> 
			<g:HTML styleName="{style.divider}"/>           	
			<g:Button styleName="{style.important}" ui:field="buttonShowWeights">Show Weight</g:Button>
			<g:HTML styleName="{style.divider}"/>			            	
			<g:Button styleName="{style.important}" ui:field="buttonShowPoints">Show Points</g:Button>
			<g:HTML styleName="{style.divider}"/>			
			<g:Button styleName="{style.important}" ui:field="configure">Configure</g:Button>
			</g:VerticalPanel>
	</g:HTMLPanel>
</ui:UiBinder> 