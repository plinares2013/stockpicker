<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui"
	xmlns:my="urn:import:com.baysphere.stockpicker.client.views.uibinder">
	
	<ui:style>
		.important {
			font-weight: bold;
			padding: 10px;
			width: 100%;
		}
		.logo {
			background-color: #ffffff;
			height: 150px;
		}
		.banner {
			height: 20px;
			background: #0000CD;
		}
	</ui:style>
 	
		<g:DockLayoutPanel unit='PX' ui:field="mainDockLayoutPanel">
		    <g:north size="50">
		        <g:HTMLPanel>
		            <g:HTML styleName = "{style.banner}"/>
		        </g:HTMLPanel>  
		    </g:north>
		    <g:west size="200">
		    	<g:HTMLPanel>
		            <h1>StockPicker</h1>
		        	<my:LeftMenu></my:LeftMenu>
		  		</g:HTMLPanel>
		    </g:west>
		    <g:center>
		        <g:SimplePanel  ui:field = "centerMainPanel"></g:SimplePanel>
		    </g:center>
		</g:DockLayoutPanel>


</ui:UiBinder> 